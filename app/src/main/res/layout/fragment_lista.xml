<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="60dp"
    tools:layout_editor_absoluteY="342dp"
    android:fillViewport="true"
    android:background="@drawable/backgroundd">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.lista.ListaFragment"
        android:id="@+id/lista">


        <TextView
            android:id="@+id/textView_listatitulo1"
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:background="@drawable/textview_design"
            android:color="@color/blue"
            android:gravity="center"
            android:text="@string/lista_de_tareas"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_listafragment"
            android:layout_width="367dp"
            android:layout_height="567dp"
            android:layout_below="@+id/textView_listatitulo1"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.414"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>